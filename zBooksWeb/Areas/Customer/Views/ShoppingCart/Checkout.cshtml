@model zBooks.DataAccess.Repository.IRepository.IUnitOfWork

@{
    // Scan the cart again in case items have been changed
    var cartItems = Model.CartItem.FilterAll(u => u.CartId == User.Identity.Name);
    var cartCount = cartItems.Count();
    var total = 0.0;
}
<h2>Checkout</h2> 
<p>This is a mock system, so no need to enter real information anyways!</p>
@if (cartCount == 0)
{
    <p>Your shopping cart is empty.</p>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <h3>Billing Information</h3>
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" class="form-control" id="fullName" name="fullName" required>
            </div>
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address" required>
            </div>

            <hr>

            <h3>Payment Information</h3>
            <div class="form-group">
                <label for="cardNumber">Card Number</label>
                <input type="text" class="form-control" id="cardNumber" name="cardNumber" placeholder="XXXX XXXX XXXX XXXX" required>
            </div>
            <div class="form-group">
                <label for="expDate">Expiration Date</label>
                <input type="text" class="form-control" id="expDate" name="expDate" placeholder="MM/YY" required>
            </div>
            <div class="form-group">
                <label for="cvv">CVV</label>
                <input type="text" class="form-control" id="cvv" name="cvv" placeholder="xxx" required>
            </div>

            <button type="submit" class="btn btn-primary">Process Order</button>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Cart Summary</h5>
                    <!-- Display cart items and their prices, shipping cost, tax, etc. -->
                        @foreach (var item in cartItems)
                        {
                            var product = Model.Product.Get(u => u.Id == item.ProductId);
                            var price = item.Quantity * product.Price;
                            total += price;
                            <tr>
                                <td>@product.Title</td>
                                <td>x @item.Quantity</td>
                                <div class="col-md-4">
                                    <td>@price.ToString("C")</td>
                                    <td><button type="button" onclick="deleteItem(@item.Id)" class="btn btn-danger delete-btn" data-item-id="@item.Id"><i class="bi bi-trash-fill"></i></button></td>
                                </div>
                            </tr>
                        }
                    <!-- Display total price, shipping cost, tax, etc. -->
                    <p>Total: @total.ToString("C")</p>
                    <p>Shipping: $5.00</p>
                    <p>Tax: $10.00</p>
                    <hr>
                    @{
                        total += 15;
                    }
                    <p><strong>Grand Total: @total.ToString("C")</strong></p>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/cart.js"></script>
}